@page
@model RepairMvc.Pages.Admin.StockModel
@{
}

<div id="app">
    <div class="column">
        <div class="column is-3">
            <table class="table">
                <tr v-for="product in products" v-on:click="SelectProduct(product)">
                    <td>{{product.description}}</td>
                </tr>
            </table>
        </div>
        <div class="column is-9">
            <table class="table" v-if="selectedProduct">
                <tr v-for="stock in selectedProduct.stock" v-on:click="SelectProduct(product)">
                    <td><input class="input" v-model="stock.description" /></td>
                    <td><input class="input" v-model="stock.quantity" /></td>
                </tr>
            </table>
            <a class="button is-warning" v-on:click="updateStock">
                Update Products
            </a>
        </div>
        <div class="column is-3">
            <h2 class="title">New Stock</h2>
            <div class="field">
                <div class="control">
                    <input class="input" v-model="newStock.description" />
                </div>
            </div>
            <div class="field">
                <div class="control">
                    <input class="input" v-model="newStock.quantity" />
                </div>
            </div>

            <a class="button is-success" v-on:click="addStock">Add</a>
        </div>
    </div>
</div>

@section scripts {
    <script src="~/js/admin/stock.js"></script>
    <script src="~/js/admin/products.js"></script>
}